@page "/home"
@using Tienda.Models
@inject Tienda.Interfaces.IProducto Iproductos
@using BlazorBootstrap;


@inject NavigationManager NavigationManager


<html>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet" />
<link href="_content/Blazor.Bootstrap/blazor.bootstrap.css" rel="stylesheet" />

    <body>
        
        <div class="header">
            <ul class="listaheader">
                <li><a href="#" class="opcionheader">Tienda Deportiva Expresso</a></li>
                <li><a href="#">Inicio</a></li>
                <li><a href="#">Mas Productos</a></li>
                <li>
                    <Button Color="ButtonColor.Danger" Size="ButtonSize.ExtraLarge">
                        <Icon Name="IconName.Cart3"></Icon>
                    </Button>
                </li>
                <li>
                    <Button Color="ButtonColor.Danger" Size="ButtonSize.ExtraLarge">
                            <Icon Name="IconName.MoonFill"></Icon>
                     </Button>
                </li>
            </ul>
        </div>

    <div class="productos">
       
        <div class="products-container">
            @foreach (var opt in productos)
            {
                <div class="tarjetas-producto">
                  
                     <div>
                        <img class="img-producto" src="@opt.imagen" />
                     </div>

                    <div>
                        <ul class="info">
                           <li><strong>@opt.nombre</strong></li>
                           <li>Talla: @opt.talla</li>
                           <li>Detalle: @opt.detalle</li>
                           <li>Precio: @opt.precio</li>
                        </ul>
                    </div>

                    <!-- <div>
                         <button class="add-car">Agregar a carrito</button>
                     </div>-->
 
                   

               </div>
            }
        </div>

    </div>

    </body>
</html>


@code{


    #region Declaraciones
    mProductos producto = new mProductos();
    List<mProductos> productos = new List<mProductos>();
    #endregion

    #region Methods

    protected override async Task OnInitializedAsync()
    {
        GetProductos();
    }

    private void GetProductos()
    {
        productos = Iproductos.GetProducts();
    }

   
    #endregion


}